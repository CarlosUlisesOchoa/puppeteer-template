{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "overrides": [
        //
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "multiline-ternary": "off",
        "space-before-function-paren": "off",
        "eol-last": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "function-paren-newline": [
            "error",
            "multiline"
        ]
    }
}